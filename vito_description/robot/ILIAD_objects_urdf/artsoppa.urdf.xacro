<?xml version="1.0"?>
<robot name="artsoppa" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="artsoppa" params="parent *origin">

        <!-- OBJECT -->
        <joint name = "${parent}_artsoppa_base_joint" type = "fixed">
            <xacro:insert_block name="origin"/>
            <origin xyz = "0 0 0" rpy = "0 0 0"/>
            <parent link = "${parent}"/>
            <child link = "artsoppa"/>
        </joint>

        <!-- base link -->
        <link name = "artsoppa">
            <visual>
                <origin xyz = "0 0 0" rpy = "0 0 0"/>
                <geometry>
                    <mesh filename = "package://vito_description/meshes/ILIAD_objects/artsoppa.dae"
                          scale="0.001 0.001 0.001"/>
                </geometry>
            </visual>
        </link>

    </xacro:macro>

</robot>